name = Hardcoded DSN Used
file_type = JAVA
grep = /\"jdbc:microsoft:sqlserver[^\"]+\"\s*;/i
grep = /\"jdbc:microsoft:sqlserver.*Password=[^;]/i
category = Authentication: Hardcoded DSN
severity = 2
description =
